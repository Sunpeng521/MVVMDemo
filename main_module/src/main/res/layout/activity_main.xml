<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".main.MainActivity">

    <TextView
        android:id="@+id/tev_please_add_components"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:text="@string/please_add_components"
        android:textColor="@color/color_FF198CFF"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        tools:ignore="UselessParent">

        <com.phone.common_library.custom_view.MineLazyViewPager
            android:id="@+id/mine_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="590" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_FF999999" />

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            android:orientation="horizontal"
            tools:ignore="UselessLeaf">

            <TextView
                android:id="@+id/tev_first_page"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/first_page"
                android:textColor="@color/color_FFE066FF"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/tev_project"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/project"
                android:textColor="@color/color_FF999999"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/tev_square"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/square"
                android:textColor="@color/color_FF999999"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/tev_resource_center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/resource"
                android:textColor="@color/color_FF999999"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/tev_mine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/mine"
                android:textColor="@color/color_FF999999"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>