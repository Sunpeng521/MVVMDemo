<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/base_dp_300"
        android:layout_height="wrap_content"
        android:background="@drawable/base_corners_15_color_ffd0d6ec"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/tev_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dp_60"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/base_title"
            android:textColor="@color/base_color_FF198CFF"
            android:textSize="@dimen/base_sp_16" />

        <TextView
            android:id="@+id/tev_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_dp_20"
            android:gravity="center_vertical|start"
            android:paddingStart="@dimen/base_dp_16"
            android:paddingEnd="@dimen/base_dp_16"
            android:text="@string/base_title"
            android:textColor="@color/base_color_FF198CFF"
            android:textSize="@dimen/base_sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dp_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tev_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/base_dp_50"
                android:layout_gravity="center_horizontal"
                android:layout_weight="3"
                android:background="@drawable/base_corners_15_color_ffcfe9ff"
                android:gravity="center"
                android:text="@string/base_cancel"
                android:textColor="@color/base_color_FF333333"
                android:textSize="@dimen/base_sp_14" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/base_dp_50"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tev_confirm"
                android:layout_width="0dp"
                android:layout_height="@dimen/base_dp_50"
                android:layout_gravity="center_horizontal"
                android:layout_weight="3"
                android:background="@drawable/base_corners_15_color_ffffc73b"
                android:gravity="center"
                android:text="@string/base_confirm"
                android:textColor="@color/base_color_FF333333"
                android:textSize="@dimen/base_sp_14" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>