<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/library_color_FF000000"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout_please_add_components"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/library_dp_48"
            android:background="@color/library_color_FF198CFF"
            android:minHeight="?attr/actionBarSize"
            android:orientation="vertical"
            app:contentInsetStart="0dp">

            <TextView
                android:id="@+id/tev_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/library_dp_48"
                android:gravity="center"
                android:text="@string/library_main"
                android:textColor="@color/library_color_FFFFFFFF"
                android:textSize="@dimen/library_sp_20" />

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/tev_please_add_components"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/library_dp_20"
            android:layout_marginEnd="@dimen/library_dp_20"
            android:gravity="center"
            android:text="@string/library_please_add_components"
            android:textColor="@color/library_color_FF198CFF"
            android:textSize="@dimen/library_sp_18"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        tools:ignore="UselessParent">

        <com.phone.library_common.custom_view.MineLazyViewPager
            android:id="@+id/mine_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="540" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/library_dp_1"
            android:background="@color/library_color_FF999999" />

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/library_dp_50"
            android:background="@color/library_white"
            android:orientation="horizontal"
            tools:ignore="UselessLeaf">

            <TextView
                android:id="@+id/tev_first_page"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/library_home"
                android:textColor="@color/library_color_FFE066FF"
                android:textSize="@dimen/library_sp_17" />

            <TextView
                android:id="@+id/tev_project"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/library_project"
                android:textColor="@color/library_color_FF999999"
                android:textSize="@dimen/library_sp_17" />

            <TextView
                android:id="@+id/tev_square"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/library_square"
                android:textColor="@color/library_color_FF999999"
                android:textSize="@dimen/library_sp_17" />

            <TextView
                android:id="@+id/tev_resource_center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/library_resource"
                android:textColor="@color/library_color_FF999999"
                android:textSize="@dimen/library_sp_17" />

            <TextView
                android:id="@+id/tev_mine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/library_mine"
                android:textColor="@color/library_color_FF999999"
                android:textSize="@dimen/library_sp_17" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>