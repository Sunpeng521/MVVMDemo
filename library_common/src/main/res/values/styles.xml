    <!-- Base application theme. -->
    <style name="library_AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/library_colorPrimary</item>
        <item name="colorPrimaryDark">@color/library_colorPrimaryDark</item>
        <item name="colorAccent">@color/library_colorAccent</item>

        <!-- 启动白屏解决方案，这三行是重点 -->
        <!--   设置背景，解决白屏的关键   -->
        <!-- 将splash图片设置在这，这样这张图片取代白屏 -->
        <item name="android:windowBackground">@mipmap/library_picture33</item>
        <!-- 设置状态栏为白色的，状态栏文字为黑的 -->
        <item name="android:statusBarColor">@color/library_white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="library_main_bg_1">#2C2C2C</item>
        <item name="library_main_bg_2">#FA3C3C3C</item>
        <item name="library_main_bg_3">#5E5E5E</item>

        <item name="library_theme_color_1">#BDBDBD</item>
        <item name="library_theme_color_2">#939393</item>
        <item name="library_theme_color_3">#737272</item>

        <item name="library_ripple_gray">#808080</item>
        <item name="library_float_bg">#D64C4C4C</item>
        <item name="library_division_line">#424242</item>
        <item name="android:navigationBarColor">#2C2C2C</item>
    </style>

    <!-- Base application theme. -->
    <style name="library_AppTheme2" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/library_colorPrimary</item>
        <item name="colorPrimaryDark">@color/library_colorPrimaryDark</item>
        <item name="colorAccent">@color/library_colorAccent</item>

        <!-- 启动白屏解决方案，这三行是重点 -->
        <!--   设置背景，解决白屏的关键   -->
        <!-- 将splash图片设置在这，这样这张图片取代白屏 -->
        <item name="android:windowBackground">@color/library_color_transparent</item>
        <!-- 设置状态栏为白色的，状态栏文字为黑的 -->
        <item name="android:statusBarColor">@color/library_white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="library_main_bg_1">#2C2C2C</item>
        <item name="library_main_bg_2">#FA3C3C3C</item>
        <item name="library_main_bg_3">#5E5E5E</item>

        <item name="library_theme_color_1">#BDBDBD</item>
        <item name="library_theme_color_2">#939393</item>
        <item name="library_theme_color_3">#737272</item>

        <item name="library_ripple_gray">#808080</item>
        <item name="library_float_bg">#D64C4C4C</item>
        <item name="library_division_line">#424242</item>
        <item name="android:navigationBarColor">#2C2C2C</item>
    </style>

    <!-- SplashActivity Theme -->
    <style name="library_SplashTheme" parent="library_AppTheme">
        <!-- 透明背景 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@mipmap/library_picture33</item>
    </style>

    <!-- 我的频道 -->
    <style name="library_news_summary_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/base_dp_4</item>
        <item name="android:layout_marginEnd">@dimen/base_dp_4</item>
        <item name="android:layout_marginTop">@dimen/base_dp_5</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="library_news_summary_photo_iv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/base_item_margin</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="library_standard_dialog_style" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="library_standard_dialog_style2" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
