    <style name="library_NoActionBarTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/library_colorPrimary</item>
        <item name="colorPrimaryDark">@color/library_colorPrimaryDark</item>
        <item name="colorAccent">@color/library_colorAccent</item>

        <!-- 启动白屏解决方案，这三行是重点 -->
        <!--   设置背景，解决白屏的关键   -->
        <!-- 将splash图片设置在这，这样这张图片取代白屏 -->
        <item name="android:windowBackground">@mipmap/library_picture33</item>
        <!-- 设置状态栏为白色的，状态栏文字为黑的 -->
        <item name="android:statusBarColor">@color/library_white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

